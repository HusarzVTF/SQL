

USE Stacja_Paliw

GO

IF OBJECT_ID('Ope.uspZatrudnij') IS NOT NULL
DROP PROC Ope.uspZatrudnij;

GO

CREATE PROC Ope.uspZatrudnij( 

@id_mie int, 
@imie varchar(35),
@nazw varchar(35),
@pesel char(11), 
@rokur int, 
@data_zatr date, 
@idumo tinyint, 
@idwyk tinyint,
@kierstud varchar(50),
@idstan tinyint, 
@pensja real, 
@kodpoc char(6), 
@ulica varchar(50),
@nrdom int, 
@nrlok int, 
@adrspecj varchar(10),
@tel char(9), 
@plec char(1),
@uwagi varchar(500),
@dat_zat date

 ) 

AS

INSERT INTO Ope.Pracownicy (

IDMiejscowosc,
Imie,
Nazwisko,
PESEL,
RokUrodzenia,
ID_datyZatr,
ID_Umowy, 
ID_Wyksztalcenie,
KierunekStudiow,
ID_Stanowisko,
Pensja, 
KODPocztowy,
Ulica,
NrDomu,
NrLokalu,
AdresSpecj,
TEL,
Plec,
UWAGI,
data_Zatrudnienia,
status_pracownika

)

VALUES ( 

@id_mie,
@imie,
@nazw,
@pesel,
@rokur,
Czas.uIdDaty(@data_zatr), 
@idumo, 
@idwyk, 
@kierstud, 
@idstan,
@pensja, 
@kodpoc, 
@ulica, 
@nrdom,
@nrlok, 
@adrspecj, 
@tel, 
@plec, 
@uwagi, 
@data_zatr, 
'pracuje'

)

/* procedura na zatrudnienie nowego pracownika*/

