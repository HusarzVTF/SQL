USE Stacja_Paliw
GO


 IF OBJECT_ID('Ope.ufZmalej') IS NOT NULL
 DROP FUNCTION Ope.ufZmalej;

 GO

 CREATE FUNCTION Ope.ufZmalej (@wyr nvarchar(1000))


RETURNS nvarchar(1000)

WITH SCHEMABINDING
AS
BEGIN

DECLARE @wyn nvarchar(1000)=(SELECT CONCAT (LOWER (LEFT(@wyr,1)),SUBSTRING(@wyr,2,LEN(@wyr)-1) ) )

RETURN @wyn;

END;

--Funkcja zwracajaca wyraz podany jako argument funkcji napisany z malej litery: argument - Podany , wynik - podany. --


